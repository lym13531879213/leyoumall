<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.mall.operator.mapper.OperateRoleMenuMapper">
    <delete id="deleteOriginMenu" parameterType="cn.com.mall.operator.pojo.dto.operator.AssignDTO">
        delete
        from leyoumall.operate_role_menu
                where role_id = #{id}
                  and menu_id in
        <foreach collection="ids" item="menuId" separator="," open="(" close=")">
            #{menuId}
        </foreach>
    </delete>

    <insert id="assignMenuToRole" parameterType="cn.com.mall.operator.pojo.dto.operator.AssignDTO">
        insert into leyoumall.operate_role_menu(role_id, menu_id) values
        <if test="ids != null and ids.size() != 0 and id != null">
            <foreach collection="ids" item="menuId" index="index" separator=",">
                (#{id}, #{menuId})
            </foreach>
        </if>
    </insert>
</mapper>